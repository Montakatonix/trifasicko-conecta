# Firebase Configuration
# Required - Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Application Configuration
# Required - Your application's base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# External APIs
# Required - https://newsapi.org/register
NEXT_PUBLIC_NEWS_API_KEY=your_news_api_key_here

# Required - https://api.esios.ree.es/
NEXT_PUBLIC_ESIOS_TOKEN=your_esios_token_here

# Optional - Security System Integration
NEXT_PUBLIC_ADT_API_KEY=your_adt_api_key_here
NEXT_PUBLIC_SECURITAS_API_KEY=your_securitas_api_key_here

# Development Settings
# Valid values: development, production, test
NODE_ENV=development

# TypeScript Strict Mode
# Recommended: true for development, false for production
TS_STRICT=true

# Performance Monitoring
# Optional - Enable/disable performance monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Error Reporting
# Optional - Enable/disable error reporting
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Cache Configuration
# Optional - Cache duration in seconds
NEXT_PUBLIC_CACHE_DURATION=3600

# API Rate Limiting
# Optional - Requests per minute
NEXT_PUBLIC_API_RATE_LIMIT=60

# Security
# Optional - Enable additional security features
NEXT_PUBLIC_ENABLE_E2E_ENCRYPTION=true
NEXT_PUBLIC_ENABLE_2FA=true

# Analytics Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Environment Configuration
NODE_ENV=development 